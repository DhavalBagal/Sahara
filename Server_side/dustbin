
	""" detectCurrencies() returns the unique class IDs from all the predicted results if the prediction confidence satisfies a recognitionThresh """
	def detectCurrencies(self, image):
		currencyDetections = dict()

		self.predictions = self.detectObj.detect(image)

		for prediction in self.predictions:
			classId = prediction['classID']
			confidence = prediction['confidence']

			""" Update currencyDetections """
			existingDetectionConfidence = currencyDetections.get(classId, None)

			if existingDetectionConfidence==None:
				currencyDetections[classId] = confidence
			else:
				if confidence >= existingDetectionConfidence:
					currencyDetections[classId] = confidence
		
		currencyDetections = dict(filter(lambda elem: elem[1] >= self.recognitionThresh, currencyDetections.items() ))

		return currencyDetections